# 管理员密码（必须修改）
ADMIN_PASSWORD=admin123

# 管理员 TOTP 密钥（可选，Base32 格式，如 JBSWY3DPEHPK3PXP）
# 配置后登录需要输入 Google Authenticator 等 App 生成的验证码
ADMIN_TOTP_SECRET=

# Session 密钥（可选，不设置会自动生成）
SECRET_KEY=your-random-secret-key

# JWT 密钥（可选，不设置会自动生成）
JWT_SECRET=your-jwt-secret

# 数据库路径（可选，默认 data.db）
DB_PATH=data.db

# 端口（可选，默认 5000）
PORT=5000

# 调试模式（可选）
DEBUG=false

# 自动同步间隔（秒，默认30）
SYNC_INTERVAL=30

# 应用基础 URL（用于 OAuth 回调）
APP_BASE_URL=http://localhost:5000

# LinuxDO OAuth 配置
LINUXDO_CLIENT_ID=your-client-id
LINUXDO_CLIENT_SECRET=your-client-secret
LINUXDO_REDIRECT_URI=http://localhost:5000/api/oauth/callback

# Cloudflare Turnstile 配置（可选，不配置则跳过验证）
CF_TURNSTILE_SITE_KEY=
CF_TURNSTILE_SECRET_KEY=

# SMTP 邮件配置（用于发送邀请码）
# QQ邮箱: SMTP_HOST=smtp.qq.com, SMTP_PORT=465, SMTP_SSL=true
# 163邮箱: SMTP_HOST=smtp.163.com, SMTP_PORT=465, SMTP_SSL=true
# Gmail: SMTP_HOST=smtp.gmail.com, SMTP_PORT=587, SMTP_SSL=false
SMTP_HOST=smtp.qq.com
SMTP_PORT=465
SMTP_USER=your-email@qq.com
SMTP_PASS=your-smtp-password
SMTP_FROM=Team Invite <your-email@qq.com>
SMTP_SSL=true
