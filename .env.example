# 管理员密码（必须修改）
ADMIN_PASSWORD=admin123

# 管理员 TOTP 密钥（可选，Base32 格式，如 JBSWY3DPEHPK3PXP）
# 配置后登录需要输入 Google Authenticator 等 App 生成的验证码
ADMIN_TOTP_SECRET=

# Session 密钥（可选，不设置会自动生成）
SECRET_KEY=your-random-secret-key

# JWT 密钥（可选，不设置会自动生成）
JWT_SECRET=your-jwt-secret

# 数据库配置
# PostgreSQL 连接字符串（推荐，支持高并发）
DATABASE_URL=postgresql://wukazi:rewink@localhost:5432/team_db

# SQLite 数据库路径（备用，低并发场景）
# DB_PATH=data.db

# 端口（可选，默认 5000）
PORT=5000

# 调试模式（可选）
DEBUG=false

# 自动同步间隔（秒，默认30）
SYNC_INTERVAL=30

# 应用基础 URL（用于 OAuth 回调）
APP_BASE_URL=http://localhost:5000

# LinuxDO OAuth 配置
LINUXDO_CLIENT_ID=your-client-id
LINUXDO_CLIENT_SECRET=your-client-secret
LINUXDO_REDIRECT_URI=http://localhost:5000/api/oauth/callback

# Cloudflare Turnstile 配置（可选，不配置则跳过验证）
CF_TURNSTILE_SITE_KEY=
CF_TURNSTILE_SECRET_KEY=

# hCaptcha 配置（用于候车室入口验证）
HCAPTCHA_SITE_KEY=
HCAPTCHA_SECRET_KEY=

# Microsoft Graph API 邮件配置（用于发送邀请码）
MS_TENANT_ID=your-tenant-id
MS_CLIENT_ID=your-client-id
MS_CLIENT_SECRET=your-client-secret
MS_MAIL_FROM=admin@yourdomain.onmicrosoft.com

# AWS SES 邮件配置（推荐，送达率高）
AWS_SES_REGION=us-east-1
AWS_SES_FROM=noreply@yourdomain.com
# AWS 凭证：使用 IAM Role（推荐）或设置以下环境变量
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# 邮件发送方式: ses 或 msgraph
EMAIL_PROVIDER=msgraph

# 测试模式（跳过真实发送 ChatGPT 邀请，直接显示成功）
TEST_MODE=false

# 邀请码有效期（秒，默认1800即30分钟）
INVITE_CODE_EXPIRE=1800

# 轮询等待时间（秒，默认60即1分钟）
POLL_WAIT_TIME=60
